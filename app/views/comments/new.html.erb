<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <!-- <% @comment = Comment.new unless @comment %> -->
        <%= form_for @comment do |f| %>

          <div class="form-group">
            <%= f.label :comment_body %>
            <%= f.text_area :comment_body, class: 'form-control' %>
            <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
          </div>

          <%= f.submit 'コメントする！', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
